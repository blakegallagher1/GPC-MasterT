{
  "name": "gpc-mastert",
  "private": true,
  "version": "0.1.0",
  "description": "Agent-first monorepo scaffold",
  "scripts": {
    "lint": "echo 'lint placeholder'",
    "test": "bash scripts/verify-structure.sh",
    "typecheck": "pnpm -r typecheck",
    "build": "pnpm -r build",
    "build:ci": "pnpm -r build",
    "test:all": "pnpm -r build && pnpm -r test",
    "smoke": "bash tests/smoke/run.sh",
    "harness:legal-chat:smoke": "bash scripts/harness-legal-chat-smoke.sh",
    "harness:ui:pre-pr": "bash scripts/harness-ui-pre-pr.sh",
    "harness:ui:capture-browser-evidence": "echo 'browser evidence capture placeholder'",
    "harness:ui:verify-browser-evidence": "echo 'browser evidence verify placeholder'",
    "harness:risk-tier": "bash scripts/harness-risk-tier.sh",
    "harness:weekly-metrics": "bash scripts/harness-weekly-metrics.sh",
    "eval:run": "pnpm --filter @gpc/cli build && node tools/cli/dist/index.js eval run --suite tests/evals/suites/core.json --out tests/evals/reports/latest.json",
    "eval:gate": "node scripts/eval-release-gate.mjs --report tests/evals/reports/latest.json --baseline docs/analysis/eval-baseline.json --thresholds tests/evals/release-gate.thresholds.json",
    "eval:trends": "node scripts/publish-eval-trends.mjs --report tests/evals/reports/latest.json --baseline docs/analysis/eval-baseline.json --out docs/analysis/eval-trends.md"
  }
}
